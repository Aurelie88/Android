<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.iut.ecommerce.ecommerce.activity.AjouterArticleActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <LinearLayout
        android:id="@+id/uploader_area"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_nomArticle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="nom article :"
            android:layout_marginTop="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="25dp" />

        <EditText
            android:id="@+id/et_nomArticle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="nom article"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            app:layout_constraintTop_toBottomOf="@id/tv_nomArticle"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <TextView
            android:id="@+id/tv_reference"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Référence :"
            android:layout_marginTop="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="25dp" />

        <EditText
            android:id="@+id/et_reference"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="nom article"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            app:layout_constraintTop_toBottomOf="@id/tv_reference"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <TextView
            android:id="@+id/tv_prixArticle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="prix de l'article"
            android:layout_marginTop="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="25dp" />

        <EditText
            android:id="@+id/et_prixArticle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="prix article"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            app:layout_constraintTop_toBottomOf="@id/tv_prixArticle"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <TextView
            android:id="@+id/tv_CategorieArticle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choisir la catégorie"
            android:layout_marginTop="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="25dp" />

       <Spinner
            android:id="@+id/list_Categorie"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/imageview"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_close"
            app:civ_border_width="4dp"
            app:civ_border_color="#FFFFFF"/>

        <Button
            android:id="@+id/button_selectpic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Image"
            android:textColor="#FFFFFF"
            android:layout_marginTop="30dp"
            android:textSize="19dp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/button_upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload Image"
            android:textColor="#FFFFFF"
            android:textSize="19dp"
            android:textStyle="bold"/>
    </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/progress_area"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <com.github.lzyzsd.circleprogress.DonutProgress
            android:id="@+id/donut_progress"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:donut_progress="0"
            app:donut_unfinished_color="#5678C2"
            app:donut_finished_color="#FFFFFF"
            app:donut_text_size="28sp"/>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
